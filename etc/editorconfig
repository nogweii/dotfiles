# vim: ft=editorconfig:
# The root config for EditorConfig (https://editorconfig.org/) living in my home directory.
# These are the global defaults that editorconfig-aware applications
# (like neovim) will end up with if there isn't a project-specific version

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[{PKGBUILD,*.bash}]
indent_style = space
indent_size = 4

# shfmt extensions
shell_variant      = bash
binary_next_line   = true
switch_case_indent = false
space_redirects    = false
keep_padding       = true
function_next_line = false

[*.sh]
indent_style = space
indent_size = 4

# shfmt extensions
shell_variant      = posix
binary_next_line   = true
switch_case_indent = false
space_redirects    = false
keep_padding       = true
function_next_line = false

[*.lua]
indent_style = space
indent_size = 2
# stylua extensions
quote_type = single
call_parentheses = always
collapse_simple_statement = never
sort_requires = true

[*.rb]
indent_style = space
indent_size = 2

[.git/COMMIT*]
max_line_length = 72

[{*.yml,*.yaml,*.json}]
indent_style = space
indent_size = 2

[{*.json5,*.jsonc}]
indent_style = space
indent_size = 4

[{*.md,*.mkd,*.markdown}]
indent_style = space
indent_size = 4
max_line_length = 80

[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[{.gitmodules,.git/config}]
indent_style = tab
tab_width = 4

[*.{diff,patch}]
trim_trailing_whitespace = false

[Dockerfile]
indent_size = 4

# CRLF is required in batch files
[*.{bat,cmd}]
end_of_line = crlf

[sshd_config,ssh_config,.ssh/config,.ssh/conf.d/*]
indent_size = 4
indent_style = space
